ul.menu{background-color:#282828;text-align:left;position:fixed;border-radius:6px;transition:opacity .3s}ul.menu li{display:flex;flex-direction:row;align-items:center;padding:8px}ul.menu li:first-child{border-top-left-radius:6px;border-top-right-radius:6px}ul.menu li:last-child{border-bottom-left-radius:6px;border-bottom-right-radius:6px}ul.menu li:hover{background-color:#3e3e3e}ul.menu li svg{width:18px;height:18px}ul.menu li span.menu-item-title{flex:1;padding-left:6px}
